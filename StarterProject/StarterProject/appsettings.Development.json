{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=StarterProject;User Id=sa;Password=Test;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Warning"
    }
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "logs/app_${shortdate}.log",
        "layout": "${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "maxLevel": "Fatal",
        "minLevel": "Off",
        "final": true
      },
      {
        "logger": "System.*",
        "maxLevel": "Fatal",
        "minLevel": "Off",
        "final": true
      },
      {
        "logger": "StarterProject.*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  },
  "AllowedHosts": "*"
}
